{
    "name": "ec-europa/subsite",
    "description": "Subsite template to initiate a new subsite project that uses toolkit.",
    "homepage": "https://github.com/ec-europa/toolkit#nexteuropa-toolkit",
    "license": "EUPL-1.1",
    "require": {
        "ec-europa/toolkit": "3.*"
    },
    "scripts": {
        "post-install-cmd": "@toolkit-install",
        "post-update-cmd": "@toolkit-install",
        "toolkit-install": "PROJECT=$(pwd) composer run-script toolkit-install -d ./vendor/ec-europa/toolkit"
    }
}
